<Window x:Class="ThLighthouse.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThLighthouse"
        mc:Ignorable="d"
        Title="バージョン情報" Height="237" Width="313" WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <TextBlock x:Name="AppNameBlock"
                    Text="AppNameBlock"
                   HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" 
                   FontSize="18" FontWeight="Bold"/>
        <TextBlock x:Name="AppVersionBlock"
                   HorizontalAlignment="Left" Margin="10,39,0,0" TextWrapping="Wrap" Text="AppVersionBlock" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock x:Name="DeveloperBlock"
                   HorizontalAlignment="Left" Margin="10,65,0,0" TextWrapping="Wrap" Text="DeveloperBlock" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="CloseButton"
                Content="閉じる(_C)"
                HorizontalAlignment="Right" Margin="0,0,10,10" Width="90" Height="24" VerticalAlignment="Bottom" Click="CloseButton_Click"/>

    </Grid>
</Window>
